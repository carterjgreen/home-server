{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":timezone(America/Toronto)"
  ],
  "ignorePaths": [
    "**/archive/**"
  ],
  "argocd": {
    "fileMatch": [
      "apps/.+\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "-deployment\\.yaml$",
      "-job\\.yaml$",
      "apps/.+\\.yaml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "(^|/)values\\.ya?ml$",
      "apps/.+\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "description": "Automerge patches",
      "matchUpdateTypes": [
        "patch",
        "digest"
      ],
      "automerge": true
    },
    {
      "description": "Github Releases",
      "matchDatasources": ["github-releases"]
    }
  ]
}