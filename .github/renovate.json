{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignorePaths": [
    "**/archive/**"
  ],
  "argocd": {
    "fileMatch": [
      "apps/.+\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "-deployment\\.yaml$",
      "-job\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "description": "Automerge patches",
      "matchUpdateTypes": [
        "patch",
        "digest"
      ],
      "automerge": true
    }
  ]
}