{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "argocd": {
    "fileMatch": [
      "argocd/.+\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "-deployment\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "description": "Automerge patches",
      "matchUpdateTypes": [
        "patch",
        "digest"
      ],
      "matchDatasources": [
        "argocd",
        "kubernetes",
        "docker"
      ],
      "automerge": true
    },
    {
      "description": "Pull request for major and minor",
      "matchUpdateTypes": [
        "major",
        "minor"
      ]
    }
  ]
}