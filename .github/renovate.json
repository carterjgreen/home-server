{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "argocd": {
    "fileMatch": ["argocd/.+\\.yaml$"]
  },
  "kubernetes": {
    "fileMatch": ["-deployment\\.yaml$"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": [ "patch"],
      "matchDatasources": ["argocd", "kubernetes"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
